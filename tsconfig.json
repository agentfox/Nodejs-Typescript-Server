{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "types": ["node"],
      "sourceMap": true,
      "outDir": "dist",
      "removeComments": true,
          /* Strict Type-Checking Options */
      "strict": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "alwaysStrict": true,
      /* Module Resolution Options */
      "moduleResolution": "node",
      "baseUrl": "./src",
      "esModuleInterop": false
    },
    "lib": ["es2015"],
    "files": [
      "./node_modules/@types/mocha/index.d.ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}